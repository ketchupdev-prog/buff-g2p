{
  "expo": {
    "name": "Buffr G2P",
    "slug": "buffr-g2p",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "buffr",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thependalorian.buffrg2p"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.thependalorian.buffrg2p",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_ANDROID_API_KEY"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-contacts",
        {
          "contactsPermission": "Buffr uses your contacts to let you send money quickly to people you know."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Buffr uses your location to show nearby agents, NamPost branches, and ATMs."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Buffr uses your camera to scan NAMQR payment codes.",
          "microphonePermission": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Buffr uses your photo library so you can set your profile picture."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Buffr uses Face ID to securely authenticate you when making payments."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}